<%= comment.body %>
	
	<small class="text-muted">Envoyé par <%= comment.user.username %> il y a <%= time_ago_in_words(comment.created_at) %></small>
	
	<div class="btn btn-reply btn-secondary btn-sm">Répondre</div>
	<div class=" reply-form form-group">
		<%= form_for [comment, Comment.new] do |f| %>
		<%= f.text_area :body, class:"form-control" %>
		<%= f.submit "Commenter ce commentaire", class:"btn btn-primary btn-sm" %>
	<% end %>
	</div>
	
<ul><%= render partial: 'partials/comment', collection: comment.comments %></ul>
