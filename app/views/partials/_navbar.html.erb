<!-- Navigation -->
<div class="container">
  <nav class="navbar navbar-expand-lg navbar-light bg-ligh mb-5">

    <div class="m-2" style="overflow: visible; max-height:40px;"><%= link_to(image_tag("orbitlogo2.png", width:"140", height:"140"), root_path) %></div>
    <div class="text-center">
    <% if user_signed_in? %>
      <span class="align-right">
        <p class="text-center" style="color:grey;font-weight:bold;">👐 Bienvenue <%= current_user.username %> !</p>
      </span>
    <% end %>
    </div>

    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarResponsive">
      <ul class="navbar-nav ml-auto">
        <li class="nav-item active">
          <%= link_to "<span data-feather='home'></span> Accueil".html_safe, root_path, class:'nav-link'%>
          <span class="sr-only">(current)</span>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "<span data-feather='trending-up'></span> Mes résultats".html_safe, dashboard_path(current_user), class:'nav-link'%>
          </li>
          <li class="nav-item">
            <%= link_to "<span data-feather='log-out'></span> Se déconnecter".html_safe, destroy_user_session_path, method: :delete, class:'nav-link'%>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "<span data-feather='log-in'></span> Se connecter".html_safe, new_user_session_path, class:'nav-link'%>
          </li>
          <li class="nav-item">
            <%= link_to "<span data-feather='user'></span> S'inscrire".html_safe, new_user_registration_path, class:'nav-link'%>
          </li>
        <% end %>
      </ul>

    </div>
</nav>
</div>
