<div class="container-fluid stylish-form">
  <div class="row mar20">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="inner-section">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="mar20 inside-form flex-column align-items-center">
            <h2 class="font_white text-center mb-2">Connexion</h2>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-envelope "></i></span>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control form-sign-devise", placeholder:"email" %>
            </div>

            <div class="input-group">
              <span class="input-group-addon"><i class="fa fa-lock "></i></span>
              <%= f.password_field :password, autocomplete: "off", class:"form-control form-sign-devise" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me, class:"form-check-label" %>
                <%= f.label :remember_me, class:"legend" %>
              </div>
            <% end -%>
            <div class="footer text-center">
              <div class="actions">
                <%= f.submit "Log in", class:"btn btn-neutral btn-round btn-lg" %>
              </div>
              <div class="text-center mt-5">
                <%= render "devise/shared/links" %>
              </div>

          <% end %>
            </div>
        </div><!-- inside -->
      </div><!-- inner -->

    </div><!-- col -->
  </div><!-- row -->
</div><!-- container -->
