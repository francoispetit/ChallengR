
<%= form_tag("setbest", method: "post") do %>

  <% if @subgoal.deadline.utc > (Time.now).utc %>
    <table class="table table-hover table-responsive{-sm|-md|-lg|-xl}" >
      <thead>
        <tr class="bg-info text-center">
          <td>Mesuré en ?</td>
          <td>Valeur cible</td>
          <td>Votre meilleur résultat</td>
          <td>Avez-vous fait mieux ?</td>
        </tr>
      </thead>
      <tbody>

    <% @subgoal.targets.each do |tar| %>
        <tr>
          <td><%=tar.unit%></td>
          <td><%=tar.value%></td>
          <td><%= @stats[:subgoals_bests][@subgoal_index][:best][tar.unit.to_sym][0] %></td>
          <td><%= eval("text_field_tag(:#{tar.unit})") %></td>
        </tr>
        <% end %>
      <tbody>
    </table>

  <% else %>
    <div class="alert alert-info">
      <p>Pas d'objectif en cours pour ce challenge</p>
    </div>
  <% end %>


  <%= submit_tag("Envoyer ces résultats)", class:"btn btn-info pull-left") %>

<% end %>
